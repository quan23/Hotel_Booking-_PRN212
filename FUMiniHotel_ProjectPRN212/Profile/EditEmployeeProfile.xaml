<Window x:Class="FUMiniHotel_ProjectPRN212.Profile.EditEmployeeProfile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FUMiniHotel_ProjectPRN212.Profile"
        mc:Ignorable="d"
        Title="Chỉnh sửa hồ sơ nhân viên" Height="400" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="SkyBlue">
    <Grid Margin="20">
        <Border Background="AliceBlue" CornerRadius="10" Padding="20" >
            <StackPanel>
                <TextBlock Text="Chỉnh sửa hồ sơ nhân viên" FontSize="20" FontWeight="Bold" Foreground="#007ACC" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Họ tên:" Grid.Row="0" FontWeight="Bold"/>
                    <TextBox x:Name="txtFullName" Grid.Row="0" Margin="100,0,0,5"/>

                    <TextBlock Text="Số điện thoại:" Grid.Row="1" FontWeight="Bold"/>
                    <TextBox x:Name="txtPhone" Grid.Row="1" Margin="100,0,0,5"/>

                    <TextBlock Text="Email:" Grid.Row="2" FontWeight="Bold"/>
                    <TextBox x:Name="txtEmail" Grid.Row="2" Margin="100,0,0,5"/>

                    <TextBlock Text="Ngày vào làm:" Grid.Row="3" FontWeight="Bold"/>
                    <DatePicker x:Name="dpHireDate" Grid.Row="3" Margin="100,0,0,5"/>

                    <!-- Thông tin không được chỉnh sửa -->
                    <TextBlock Text="Chức vụ:" Grid.Row="4" FontWeight="Bold" Margin="0,10,0,0"/>
                    <TextBox x:Name="txtRole" Grid.Row="4" Margin="100,0,0,5" FontWeight="Bold" Background="LightGray" IsReadOnly="True"/>

                    <TextBlock Text="Lương:" Grid.Row="5" FontWeight="Bold"/>
                    <TextBox x:Name="txtSalary" Grid.Row="5" Margin="100,0,0,5" FontWeight="Bold" Background="LightGray" IsReadOnly="True"/>

                    <TextBlock Text="Trạng thái:" Grid.Row="6" FontWeight="Bold"/>
                    <TextBox x:Name="txtStatus" Grid.Row="6" Margin="100,0,0,5" FontWeight="Bold" Background="LightGray" IsReadOnly="True"/>
                </Grid>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <Button Content="Lưu" Width="120" Click="btnSave_Click" Background="Green" Foreground="White" FontWeight="Bold"/>
                    <Button Content="Hủy" Width="100" Margin="10,0,0,0" Click="btnCancel_Click" Background="Gray" FontWeight="Bold" Foreground="White"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>

